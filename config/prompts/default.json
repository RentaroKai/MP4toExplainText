{
  "fields": {
    "Name of AnimationFile": {
      "description": "Give a NEW name to the motion",
      "type": "string",
      "required": true
    },
    "character_gender": {
      "description": "Gender for which this motion is applicable (use 'any' for versatile motions)",
      "type": "string",
      "required": true,
      "options": ["male", "female", "any"]
    },
    "character_age_group": {
      "description": "Age group for which this motion is applicable (use 'any' for versatile motions)",
      "type": "string",
      "required": true,
      "options": ["adult", "old", "child", "any"]
    },
    "character_body_type": {
      "description": "Describe the style/direction of movement with an adjective",
      "type": "string",
      "required": true,
      "options": ["Sexy feminine", "Massive", "Serious", "Cute feminine", "Reverent", "Languid", "Solemn", "Natural"]
    },
    "Overall Movement Description": {
      "description": "Concisely describe the movement in English (up to 5 words)",
      "type": "string",
      "required": true
    },
    "Initial Pose": {
      "description": "Choose one specific (starting) posture category:",
      "type": "string",
      "required": true,
      "options": ["standing", "walking", "running", "sitting on furniture", "sitting on ground", "squatting", "lying down"]
    },
    "Final Pose": {
      "description": "Choose one specific (ending) posture category:",
      "type": "string",
      "required": true,
      "options": ["standing", "walking", "running", "sitting on furniture", "sitting on ground", "squatting", "lying down"]
    },
    "Appropriate Scene": {
      "description": "Motion genre ",
      "type": "string",
      "required": true,
      "options": ["Combat", "Adventure", "Sport", "Dance", "Fantasy", "Gesture", "FacialAnimation","Other"]
    },
    "Loopable": {
      "description": "Whether it can be played on repeat (loop playback) (Yes/No)",
      "type": "string",
      "required": true,
      "options": ["Yes", "No"]
    },
    "Tempo Speed": {
      "description": "Speed of movement",
      "type": "string",
      "required": true,
      "options": ["Quick", "Brisk", "Normal", "Relaxed"]
    },
    "Intensity Force": {
      "description": "Emotional intensity",
      "type": "string",
      "required": true,
      "options": ["Intense emotional expression", "Minimal emotional expression", "No emotion"]
    },
    "Posture Detail": {
      "description": "Precise description of posture",
      "type": "string",
      "required": true
    },
    "param_01": {
      "description": "Item held in hand (e.g., ball, bat, none)",
      "type": "string",
      "required": false
    },
    "param_02": {
      "description": "Intent conveyed by the movement (use 'Neutral' if nothing applies)",
      "type": "string",
      "required": false,
      "options": [
        "Agreement",
        "Denial",
        "Sadness",
        "Joy",
        "Anger",
        "Fear",
        "Command",
        "Greeting",
        "Pride",
        "Excitement",
        "Determination",
        "Warning",
        "Invitation",
        "Rejection",
        "Neutral"
      ]
    },
    "param_03": {
      "description": "Choose one specific gesture category:",
      "type": "string",
      "required": true,
      "options": ["Conversation","Shout","Laugh","Celebrate","Flirt","Challenge","Cry","Dismiss","GetUp","Groove","Greeting","Mope","Flex","Reaction","Taunt","Thankful","Threaten","Cheer","Wave","Clap","Nod","ShakeHead","Point","Bow","Shrug","Jump"]
    }
  }
}